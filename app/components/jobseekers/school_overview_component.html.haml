%section#school-overview
  %h3.govuk-heading-l.section-heading= t('schools.school_overview')

  %table.govuk-table
    %tbody.govuk-table__body
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
          = t('schools.type')
        %td.govuk-table__cell
          = organisation_type(organisation: @school, with_age_range: false)
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
          = t('schools.phase')
        %td.govuk-table__cell
          = school_phase(@school)
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
          = t('schools.school_size')
        %td.govuk-table__cell
          = school_size(@school)
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
          = t('schools.age_range')
        %td.govuk-table__cell
          = age_range(@school)
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
          = t('schools.ofsted_report')
        - if ofsted_report(@school).present?
          %td.govuk-table__cell
            = link_to(t('schools.view_ofsted_report'), ofsted_report(@school), class: 'govuk-link wordwrap', target: '_blank')
        - else
          %td.govuk-table__cell
            = t('schools.no_information')
      - if @school.website.present? || @school.url.present?
        %tr.govuk-table__row
          %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
            = t('schools.website')
          %td.govuk-table__cell
            = link_to(t('schools.website_link_text', organisation_name: @school.name), @school.website.presence || @school.url, class: 'govuk-link link-wrap', target: '_blank')
      - if @vacancy.contact_email.present?
        %tr.govuk-table__row
          %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
            = t('jobs.contact_email')
          %td.govuk-table__cell
            = mail_to @vacancy.contact_email, @vacancy.contact_email, class: 'govuk-link link-wrap', subject: t('jobs.contact_email_subject', job: @vacancy.job_title), body: t('jobs.contact_email_body', url: job_url(@vacancy))
      - if @vacancy.contact_number.present?
        %tr.govuk-table__row
          %td.govuk-table__cell{ class: "govuk-!-font-weight-bold" }
            = t('jobs.contact_number')
          %td.govuk-table__cell
            = link_to @vacancy.contact_number, "tel:#{@vacancy.contact_number}", class: 'govuk-link'


  - if @vacancy.about_school.present?
    %h4.govuk-heading-s
      = t('schools.info', organisation: @school.name)
    %p= vacancy_or_organisation_description(@vacancy)

  - if @vacancy.school_visits.present?
    %h4.govuk-heading-s
      = t('jobs.school_visits_heading', school: @school.name)
    %p= @vacancy.school_visits

  %section#school-location
    %h3.govuk-heading-l.section-heading= t('schools.school_location.one')
    %p= full_address(@school)

    - if @school.geolocation
      %div{ id: 'map', role: 'presentation', aria: { hidden: 'true', label: t('schools.map_aria_label') }, data: { school: school_map_data } }

      %script{ defer: true, src: "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_API_KEY']}&callback=initMap"}
