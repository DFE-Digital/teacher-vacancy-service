.school.grid-row
  .column-two-thirds
    %h1.heading-large
      = @school.name

    %dl.govuk-check-your-answers.cya-questions-short
      %div
        %dt.cya-question
          = t('schools.description')
        %dd.cya-answer
          = @school.description.presence || 'Not provided'
        %dd.cya-change
          = link_to edit_school_path(@school) do
            = t('buttons.change')
            %span.visually-hidden
              description

      %div
        %dt.cya-question
          = t('schools.address')
        %dd.cya-answer
          = @school.full_address
        %dd.cya-change

      %div
        %dt.cya-question
          = t('schools.school_age')
        %dd.cya-answer
          = @school.minimum_age
          to
          = @school.maximum_age
        %dd.cya-change

      %div
        %dt.cya-question
          = t('schools.type')
        %dd.cya-answer
          = @school.school_type.label
        %dd.cya-change

      - if @school.url.present?
        %div
          %dt.cya-question
            Website
          %dd.cya-answer
            = link_to @school.url, @school.url
          %dd.cya-change

  .column-third
    %aside.school--metadata
      = link_to 'Publish a vacancy', new_school_vacancy_path(school_id: @school.id), class: 'button'
