.govuk-tabs{"data-module" => "tabs"}
  %h2.govuk-tabs__title
    = t('aria_labels.content')
  %ul.govuk-tabs__list.tab-list
    - [:published, :pending, :draft, :expired].each do |t|
      %li.govuk-tabs__list-item
        = link_to t("jobs.#{t}_jobs"), jobs_with_type_school_path(t), class: "govuk-tabs__tab #{@vacancy_type == t ? 'govuk-tabs__tab--selected' : ''}"

  %section.govuk-tabs__panel
    %h2.govuk-heading-m= t("jobs.#{@vacancy_type}_jobs")
    - if @vacancies.any?
      = render partial: "vacancies_#{@vacancy_type}", locals: { vacancies: @vacancies, school: school }
    - else
      %p= t("jobs.no_#{@vacancy_type}_jobs")
