.grid-row
  .column-full
    %h2.heading-medium= t('schools.no_vacancies.heading')

    %p
      = "To"
      = link_to 'create', new_school_vacancy_path(school)
      = 'a good vacancy listing for your school, you will need the following information:'

  .column-one-half
    %h2.heading-small Required
    %ul.list.list-bullet
      - t('schools.no_vacancies.bullets.mandatory').each do |bullet|
        %li= bullet

  .column-one-half
    %h2.heading-small Optional
    %ul.list.list-bullet
      - t('schools.no_vacancies.bullets.optional').each do |bullet|
        %li= bullet
