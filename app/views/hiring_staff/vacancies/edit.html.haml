- content_for :page_title_prefix, "Edit the #{@vacancy.job_title} job for #{current_school.name}"
= render partial: 'school_vacancy_breadcrumb'

.govuk-grid-row
  .govuk-grid-column-two-thirds
    %h1.govuk-heading-l
      = t('jobs.edit_heading', school: @vacancy.school.name)

.vacancy.govuk-grid-row
  .govuk-grid-column-two-thirds
    = render 'hiring_staff/vacancies/edit_vacancy_sections/edit_job_specification'
    = render 'hiring_staff/vacancies/edit_vacancy_sections/edit_candidate_specification'
    = render 'hiring_staff/vacancies/edit_vacancy_sections/edit_application_details'
