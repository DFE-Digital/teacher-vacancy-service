%h1.heading-large
  = @vacancies.pluralize_vacancy_count(@vacancies.count, 'vacancies.vacancy_count')
.grid-row
  .column-one-third
    = render 'filters'
  .column-two-thirds
    - if @vacancies.any?
      %div.sortable-links
        = t('vacancies.sort_by')
        = link_to_sort_by t('vacancies.expires_on'), column: 'expires_on', order: 'asc', sort: @sort
        = link_to_sort_by t('vacancies.publish_on'), column: 'publish_on', order: 'desc', sort: @sort

      %ul.vacancies
        - @vacancies.each do |vacancy|
          = render partial: 'vacancy', locals: { vacancy: vacancy }

    - else
      %div.empty
        = t('vacancies.no_vacancies')

= paginate @vacancies
