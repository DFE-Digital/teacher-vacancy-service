.govuk-notification.js-dismissable{role: 'alert', tabindex: '-1', class: "govuk-notification--#{style}"}
  - unless style == 'danger'
    %a.govuk-link.govuk-link--no-visited-state.dismiss-link.js-dismissable__link{ href: '#' }
      = t('buttons.dismiss')
  .govuk-notification__title= heading
  .govuk-notification__body= message
  .govuk-notification__list
    - sections.each do |section|
      %a.govuk-link.govuk-link--no-visited-state{ href: "##{section}_heading"}
        = t("jobs.#{section}")
      %br
